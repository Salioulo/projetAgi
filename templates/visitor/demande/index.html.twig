{% extends 'base.html.twig' %}

{% block title %}Demande index{% endblock %}

{% block body %}
    <h1>Demande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>DescriptionProbleme</th>
                <th>Traiter</th>
                <th>Periode</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>LibelleMateriel</th>
                <th>Marque</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demande in demandes %}
            <tr>
                <td>{{ demande.id }}</td>
                <td>{{ demande.nom }}</td>
                <td>{{ demande.prenom }}</td>
                <td>{{ demande.adresse }}</td>
                <td>{{ demande.descriptionProbleme }}</td>
                <td>{{ demande.traiter }}</td>
                <td>{{ demande.periode }}</td>
                <td>{{ demande.telephone }}</td>
                <td>{{ demande.email }}</td>
                <td>{{ demande.libelleMateriel }}</td>
                <td>{{ demande.marque }}</td>
                <td>
                    <a href="{{ path('demande_show', {'id': demande.id}) }}">show</a>
                    <a href="{{ path('demande_edit', {'id': demande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('demande_nouveau') }}">Create new</a>
{% endblock %}
